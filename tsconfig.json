{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,

    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": [],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["../../assets/*"],
      "@api/*": ["../../api/*"],
      "@components/*": ["../../components/*"],
      "@composable/*": ["../../composable/*"],
      "@configs/*": ["../../configs/*"],
      "@interfaces/*": ["../../interfaces/*"],
      "@locales/*": ["../../locales/*"],
      "@pages/*": ["../../pages/*"],
      "@store/*": ["../../store/*"],
      "@types/*": ["../../types/*"],
      "@view/*":["../../view/*"],
      "@utils/*": ["../../utils/*"],
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
