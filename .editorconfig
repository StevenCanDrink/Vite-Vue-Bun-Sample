root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# Ignore paths
[node_modules/**]
charset = none
end_of_line = none
insert_final_newline = none
indent_size = none
indent_style = none
trim_trailing_whitespace = none
